<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].IdentityCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LicenceNumber)
